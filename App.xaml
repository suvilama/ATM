<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ATM"
             x:Class="ATM.App"
             >
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="DarkModeBackgroundColor">#333333</Color>
            <Color x:Key="DarkModeTextColor">#97c5de</Color>

            <!-- Light mode background colors -->
            <Color x:Key="LightModeBackgroundColor">#97c5de</Color>
            <Color x:Key="LightModeTextColor">#333333</Color>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
