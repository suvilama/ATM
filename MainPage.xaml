<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ATM.MainPage"
             Title="Cash Flow ATM">

    <VerticalStackLayout Padding="20">
        <Label Text="Welcome to Cash Flow ATM" FontSize="24" HorizontalOptions="Center" />
        <Label Text="Please Add Your Login Details!" FontSize="18" HorizontalOptions="Center" Margin="0,20,0,40" />

        <Entry x:Name="phoneNumberEntry" Placeholder="Phone number" />
        <Entry x:Name="pinEntry" Placeholder="PIN" IsPassword="True" />

        <Button Text="Log In" Clicked="LogInButtonClicked" VerticalOptions="EndAndExpand" Margin="0,40,0,0" />

        
    </VerticalStackLayout>

</ContentPage>