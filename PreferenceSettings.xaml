<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ATM.PreferenceSettings"
             Title="PreferenceSettings">


    <Grid>
        <Label Grid.Row="0"  Text="Home" FontSize="18" HorizontalOptions="Start" />
        <Label Grid.Row="0" Text="Settings" FontSize="18" HorizontalOptions="End" />
        
        <VerticalStackLayout Padding="20" VerticalOptions="Center">
        
        

        <Label Text="Hi, John Doe!" FontSize="24" HorizontalOptions="Center" />
        <Label Text="Choose your preferences settings" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,20,0,40" />

        <Button Text="Dark Mode " FontSize="18" WidthRequest="200" Margin="0,0,0,20"/>
        <Button Text="Font Size" FontSize="18" WidthRequest="200" Margin="0,0,0,20"/>
        <Button Text="Change Pin" FontSize="18" WidthRequest="200" Margin="0,0,0,20"/>
    </VerticalStackLayout>
    </Grid>
    
</ContentPage>